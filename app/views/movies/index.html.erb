<div class="main-content">
  <%= render partial: "shared/splash" %>

  <div id="filter" class="browser">
    <div id="movie-nav" class="actions">
      <h3>Navigate</h3>
      <a href="#" data-action="previous">Previous</a> | <a href="#" data-action="next">Next</a>
    </div>
    <div id="movie-nav" class="actions">
      <h3>Filter by Genre</h3>
      <ul>
        <li><input type="checkbox" data-filter="action">Action</input></li>
        <li><input type="checkbox" data-filter="comedy">Comedy</input></li>
        <li><input type="checkbox" data-filter="drama">Drama</input></li>
      </ul>
    </div>
    <div id="movie-nav" class="actions">
      <h3>Filter by Rating</h3>
      <ul>
        <li><input type="checkbox" data-filter="5 stars">5 stars</input></li>
        <li><input type="checkbox" data-filter="4 stars">4 stars</input></li>
        <li><input type="checkbox" data-filter="3 stars">3 stars</input></li>
      </ul>
    </div>
  </div>

  <div id="details" class="details">
    details
  </div>
  <div id="movies" class="mod-movies">
    <%= render partial: 'movie', collection: @movies %>
  </div>
</div>

<%= javascript_include_tag('custom') %>
<%= javascript_tag do %>
  $(document).ready(function(){
    $('#movies').masonry();
    Backbone.history.start({pushState: true});

    var App = require('./modules/app');
    var app = new App();
    app.start();
  });
<% end %>
